---
interface Step {
  title: string;
  description: string;
}

interface Props {
  steps: Step[];
  color: string;
}

const { steps, color } = Astro.props;
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-12">
    Nuestro Proceso
  </h2>
  <div class="grid md:grid-cols-4 gap-8">
    {steps.map((step, index) => (
      <div class="relative">
        {index < steps.length - 1 && (
          <div class={`hidden md:block absolute top-1/2 right-0 w-full h-1 bg-gradient-to-r from-${color}-light to-${color}-dark transform translate-x-1/2`}></div>
        )}
        <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-xl relative z-10 hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
          <div class={`w-12 h-12 rounded-full bg-${color}-light dark:bg-${color}-dark flex items-center justify-center mb-4 mx-auto`}>
            <span class="text-white font-bold">{index + 1}</span>
          </div>
          <h3 class="text-xl font-bold text-center mb-4">{step.title}</h3>
          <p class="text-gray-600 dark:text-gray-300 text-center">{step.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>