---
interface Props {
  name: string;
  company: string;
  image: string;
  testimonial: string;
}

const { name, company, image, testimonial } = Astro.props;
---

<div class="bg-white dark:bg-gray-700 p-6 rounded-2xl shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300">
  <div class="flex items-center mb-6">
    <img src={image} alt={name} class="h-14 w-14 rounded-full object-cover border-2 border-primary-light dark:border-primary-dark" />
    <div class="ml-4">
      <h4 class="text-lg font-semibold text-gray-900 dark:text-white">{name}</h4>
      <p class="text-primary-dark dark:text-primary-light">{company}</p>
    </div>
  </div>
  <div class="relative">
    <svg class="absolute -top-4 -left-4 w-8 h-8 text-primary-light/20 dark:text-primary-dark/20" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
    </svg>
    <p class="text-gray-600 dark:text-gray-300 italic relative z-10">
      "{testimonial}"
    </p>
  </div>
</div>