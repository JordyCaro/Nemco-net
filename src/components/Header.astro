---
import ThemeToggle from './ThemeToggle';
import LanguageToggle from './LanguageToggle';
---

<header class="fixed w-full bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-primary-dark dark:text-primary-light">
          Nemco-Net
        </a>
      </div>

      <nav class="hidden md:flex items-center gap-8">
        <a href="#about" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark dark:hover:text-primary-light">
          Nosotros
        </a>
        <a href="#services" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark dark:hover:text-primary-light">
          Servicios
        </a>
        <a href="#team" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark dark:hover:text-primary-light">
          Equipo
        </a>
        <a href="#testimonials" class="text-gray-700 dark:text-gray-300 hover:text-primary-dark dark:hover:text-primary-light">
          Testimonios
        </a>
      </nav>

      <div class="flex items-center gap-4">
        <ThemeToggle client:load />
        <!-- <LanguageToggle client:load /> -->
        <a
          href="/contacto"
          class="hidden md:inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-primary-dark hover:bg-primary dark:bg-primary dark:hover:bg-primary-dark transition-colors duration-200"
        >
          Contacto
        </a>
      </div>
    </div>
  </div>
</header>