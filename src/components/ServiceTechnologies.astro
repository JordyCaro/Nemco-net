---
interface Props {
  technologies: string[];
  color: string;
}

const { technologies, color } = Astro.props;
---

<section class="mb-16">
  <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-12">
    Tecnolog√≠as que Utilizamos
  </h2>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
    {technologies.map(tech => (
      <div class={`bg-white dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300 border-2 border-${color}-light/20 dark:border-${color}-dark/20`}>
        <div class="text-center">
          <span class={`text-lg font-medium text-${color}-dark dark:text-${color}-light`}>{tech}</span>
        </div>
      </div>
    ))}
  </div>
</section>