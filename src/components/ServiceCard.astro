---
interface Props {
  title: string;
  description: string;
  icon: 'web' | 'landing' | 'mobile' | 'cloud' | 'ai' | 'consulting' | 'security';
  color: string;
  features: string[];
  technologies: string[];
  href: string;
}

const { title, description, icon, color, features, technologies, href } = Astro.props;

const icons = {
  web: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
  landing: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />`,
  mobile: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />`,
  cloud: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />`,
  ai: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`,
  consulting: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />`,
  security: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`
};
---

<div class="group relative p-8 rounded-2xl bg-white/90 dark:bg-gray-800/90 shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-300 overflow-hidden flex flex-col h-full backdrop-blur-sm">
  <div class="relative flex flex-col items-center text-center flex-grow">
    <div class={`w-20 h-20 bg-gradient-to-br from-${color}-light to-${color}-dark rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg mx-auto`}>
      <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[icon]} />
    </div>
    
    <h3 class={`text-2xl font-bold text-white dark:text-white mb-4 group-hover:text-${color}-dark dark:group-hover:text-${color}-light transition-colors duration-300 text-center`}>
      {title}
    </h3>
    
    <p class="text-gray-600 dark:text-gray-300 mb-8 text-lg text-center">
      {description}
    </p>

    <div class="w-full space-y-6 flex-grow">
      <div>
        <h4 class="text-lg font-semibold text-white dark:text-white mb-4 text-center">¿Qué incluye?</h4>
        <ul class="space-y-3">
          {features.map(feature => (
            <li class="flex items-start gap-3 justify-center">
              <svg class={`w-6 h-6 text-${color}-dark dark:text-${color}-light flex-shrink-0 mt-1`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-600 dark:text-gray-300">{feature}</span>
            </li>
          ))}
        </ul>
      </div>

      {technologies.length > 0 && (
        <div class="w-full pt-6 border-t border-gray-200 dark:border-gray-700">
          <h4 class="text-lg font-semibold text-white dark:text-white mb-4 text-center">Tecnologías</h4>
          <div class="flex flex-wrap gap-2 justify-center">
            {technologies.map(tech => (
              <span class={`px-4 py-2 rounded-lg bg-${color}-light/10 dark:bg-${color}-dark/10 text-${color}-dark dark:text-${color}-light text-sm font-medium border border-${color}-light/20 dark:border-${color}-dark/20 hover:scale-105 transition-transform duration-200`}>
                {tech}
              </span>
            ))}
          </div>
        </div>
      )}
    </div>

    <div class="pt-6 mt-6 border-t border-gray-200 dark:border-gray-700 flex gap-4 w-full">
      <a href={href} class={`flex-1 inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-gradient-to-r from-${color}-dark to-${color} rounded-lg hover:from-${color} hover:to-${color}-dark transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl`}>
        Conocer más
        <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</div>