---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import FeaturedServices from '../components/FeaturedServices.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialSlider from '../components/TestimonialSlider';
import AboutUs from '../components/AboutUs.astro';
import TeamSection from '../components/TeamSection.astro';
import ProductsSection from '../components/ProductsSection.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import { Image } from 'astro:assets';
import catKeyboard from '../assets/img/cat-keyboard.webp';

---

<Layout title="Nemco-Net">
  <main class="pb-20">
    <HeroSection />
    <AboutUs />
    <FeaturedServices />
    
    
    <!-- Other Services -->
    <section id="services" class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Más Servicios <span class="text-secondary-dark dark:text-secondary-light">Especializados</span>
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            Descubre nuestra gama completa de soluciones tecnológicas
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <ServiceCard
            title="Desarrollo Móvil"
            description="Aplicaciones móviles nativas y multiplataforma que transforman tu visión en experiencias móviles excepcionales."
            icon="mobile"
            color="accent"
            features={[
              "Apps nativas para iOS y Android",
              "Sincronización en tiempo real",
              "Modo offline y caché inteligente"
            ]}
            technologies={["React Native", "Flutter", "Firebase"]}
            href="/servicios/desarrollo-movil"
          />
          
          <ServiceCard
            title="Soluciones Cloud"
            description="Infraestructura escalable y segura en la nube para potenciar tu negocio digital."
            icon="cloud"
            color="secondary"
            features={[
              "Arquitectura serverless",
              "Microservicios",
              "Alta disponibilidad"
            ]}
            technologies={["AWS", "Azure", "Google Cloud"]}
            href="/servicios/soluciones-cloud"
          />

          <ServiceCard
            title="Inteligencia Artificial"
            description="Soluciones de IA que transforman datos en decisiones inteligentes."
            icon="ai"
            color="primary"
            features={[
              "Machine Learning",
              "Procesamiento de lenguaje natural",
              "Análisis predictivo"
            ]}
            technologies={["TensorFlow", "PyTorch", "OpenAI"]}
            href="/servicios/inteligencia-artificial"
          />
          <ServiceCard
          title="Consultoría Técnica"
          description="Asesoramiento experto en estrategia tecnológica, arquitectura e implementación para alcanzar tus objetivos empresariales."
          icon="consulting"
          color="primary"
          features={[
            "Machine Learning",
            "Procesamiento de lenguaje natural",
            "Análisis predictivo"
          ]}
          technologies={["TensorFlow", "PyTorch", "OpenAI"]}
          href="/servicios/inteligencia-artificial"
        />
        <ServiceCard
          title="Landing Pages"
          description="Páginas de aterrizaje de alta conversión diseñadas para captar leads y mostrar tus productos de manera efectiva."
          icon="landing"
          color="accent"
          features={[
            "Machine Learning",
            "Procesamiento de lenguaje natural",
            "Análisis predictivo"
          ]}
          technologies={["TensorFlow", "PyTorch", "OpenAI"]}
          href="/servicios/inteligencia-artificial"
        />
        </div>
      </div>
    </section>

    <ProductsSection />
    <!-- <WhyChooseUs /> -->
    <TeamSection />
    
    <!-- Testimonials Section -->
    <section id="testimonials" class="py-20 mb-20">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Lo que dicen nuestros <span class="text-primary-dark dark:text-primary-light">Clientes</span>
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Historias de éxito de quienes han confiado en nosotros
        </p>
      </div>
      <TestimonialSlider client:load />
    </section>
  </main>
</Layout>