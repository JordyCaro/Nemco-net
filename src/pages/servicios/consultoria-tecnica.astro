---
import ServiceLayout from '../../layouts/ServiceLayout.astro';
import ServiceHero from '../../components/ServiceHero.astro';
import ServiceFeatures from '../../components/ServiceFeatures.astro';
import ServiceTechnologies from '../../components/ServiceTechnologies.astro';
import ServiceProcess from '../../components/ServiceProcess.astro';

const features = [
  {
    title: "Estrategia Digital",
    description: "Te ayudamos a definir una hoja de ruta tecnológica alineada con tus objetivos de negocio, maximizando el retorno de inversión.",
    icon: `<path stroke="#FF5F15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />`
  },
  {
    title: "Optimización de Infraestructura",
    description: "Analizamos y mejoramos tu arquitectura tecnológica para garantizar rendimiento, escalabilidad y seguridad en tus sistemas.",
    icon: `<path stroke="#FF5F15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />`
  },
  {
    title: "Transformación Digital",
    description: "Implementamos soluciones innovadoras para digitalizar y automatizar procesos, mejorando la eficiencia operativa de tu empresa.",
    icon: `<path stroke="#FF5F15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />`
  }
];


const technologies = [
  "Arquitectura Empresarial", "Cloud Computing", "Ciberseguridad", "Big Data", 
  "Automatización de Procesos", "Gestión de Proyectos TI", "DevOps", "Optimización de Infraestructura"
];


const steps = [
  {
    title: "Diagnóstico",
    description: "Evaluamos la infraestructura tecnológica, procesos y necesidades del negocio para identificar oportunidades de mejora."
  },
  {
    title: "Estrategia",
    description: "Diseñamos un plan de acción personalizado con soluciones tecnológicas alineadas a los objetivos empresariales."
  },
  {
    title: "Implementación",
    description: "Ejecutamos las estrategias definidas, optimizando sistemas, integrando herramientas y capacitando equipos."
  },
  {
    title: "Seguimiento y Optimización",
    description: "Monitoreamos el impacto de las soluciones implementadas y realizamos ajustes para maximizar la eficiencia y rentabilidad."
  }
];

---

<ServiceLayout 
  title="Consultoría Técnica" 
  description="Soluciones estratégicas para optimizar procesos, tecnología e infraestructura en tu empresa."
  color="primary"
>
  <ServiceHero
    title="Consultoría Técnica"
    description="Impulsamos la eficiencia y competitividad de tu negocio con estrategias tecnológicas innovadoras y asesoría especializada."
    image="https://images.unsplash.com/photo-1531297484001-80022131f5a1?auto=format&fit=crop&q=80&w=2070"
    color="primary"
  />

  <ServiceFeatures features={features} color="primary" />

  <ServiceProcess steps={steps} color="primary" />

  <ServiceTechnologies technologies={technologies} color="primary" />

  <div class="text-center">
    <a href="/contacto" class="inline-flex items-center px-8 py-4 rounded-xl text-white bg-gradient-to-r from-primary-dark to-primary hover:from-primary hover:to-primary-dark transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
      Optimiza tu Negocio con Consultoría Técnica
      <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
  <br><br>
</ServiceLayout>