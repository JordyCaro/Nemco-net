---
import ServiceLayout from '../../layouts/ServiceLayout.astro';
import ServiceHero from '../../components/ServiceHero.astro';
import ServiceFeatures from '../../components/ServiceFeatures.astro';
import ServiceTechnologies from '../../components/ServiceTechnologies.astro';
import ServiceProcess from '../../components/ServiceProcess.astro';

const features = [
  {
    title: "Diseño Persuasivo",
    description: "Creamos landing pages con un diseño atractivo y centrado en la conversión, priorizando la claridad y facilidad de navegación para aumentar la tasa de conversión.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />`
  },
  {
    title: "Optimización Técnica",
    description: "Aseguramos que tu página cargue rápidamente, esté optimizada para SEO, y sea completamente funcional en cualquier dispositivo para mejorar la experiencia del usuario y los resultados en buscadores.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />`
  },
  {
    title: "Análisis y Mejora",
    description: "Implementamos herramientas de análisis para seguir el comportamiento de los usuarios, realizando pruebas A/B para optimizar la conversión constantemente.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />`
  }
];

const steps = [
  {
    title: "Estrategia",
    description: "Definimos los objetivos claros de la landing page, el público objetivo y los KPIs para guiar el diseño y desarrollo de la página."
  },
  {
    title: "Diseño UX/UI",
    description: "Creamos wireframes y diseños visuales optimizados para la conversión, priorizando la claridad en las llamadas a la acción y la usabilidad."
  },
  {
    title: "Desarrollo",
    description: "Implementamos la landing page utilizando tecnologías modernas, optimizando la velocidad, accesibilidad y rendimiento de la página."
  },
  {
    title: "Lanzamiento",
    description: "Realizamos pruebas finales, ajustes de rendimiento y monitoreo de la página tras el lanzamiento para asegurar que todo funcione a la perfección."
  }
];

const technologies = [
  "Astro", "Tailwind CSS", "Google Analytics", "HotJar", "Optimizely", 
  "Mailchimp", "Zapier", "Hubspot", "WordPress", "Unbounce"
];
---

<ServiceLayout 
  title = "Landing Pages";
  description="Páginas de aterrizaje optimizadas para convertir visitantes en clientes."
  color="accent"
>
<ServiceHero
  title="Landing Pages"
  description="Creamos landing pages atractivas y optimizadas para maximizar tus conversiones, utilizando un diseño persuasivo y análisis continuo."
  image="https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&q=80&w=2015"
  color="accent"
/>

  <ServiceFeatures features={features} color="accent" />
  
  <ServiceProcess steps={steps} color="accent" />

  <ServiceTechnologies technologies={technologies} color="accent" />

  <div class="text-center">
    <a 
      href="/contacto" 
      class="inline-flex items-center px-8 py-4 rounded-xl text-white bg-gradient-to-r from-accent-dark to-accent hover:from-accent hover:to-accent-dark transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105"
    >
      Comienza tu Landing Page
      <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
  <br><br>
</ServiceLayout>
