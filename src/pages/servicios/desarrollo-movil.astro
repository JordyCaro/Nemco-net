---
import ServiceLayout from '../../layouts/ServiceLayout.astro';
import ServiceHero from '../../components/ServiceHero.astro';
import ServiceFeatures from '../../components/ServiceFeatures.astro';
import ServiceTechnologies from '../../components/ServiceTechnologies.astro';
import ServiceProcess from '../../components/ServiceProcess.astro';

const features = [
  {
    title: "Apps Nativas",
    description: "Desarrollamos aplicaciones optimizadas para iOS y Android, asegurando el mejor rendimiento y experiencia de usuario. Utilizamos Swift y Kotlin para garantizar aplicaciones rápidas, fluidas y completamente adaptadas a cada plataforma.",
    icon: `<path stroke="#FF5F15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4h10M7 20h10M5 8h14M5 16h14M9 12h6M12 3v18" />`
  },
  {
    title: "Apps Multiplataforma",
    description: "Creamos aplicaciones eficientes con tecnologías como React Native y Flutter, reduciendo costos y tiempos de desarrollo sin comprometer la calidad y experiencia de usuario.",
    icon: `<path stroke="#FF5F15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16M8 3v18M16 3v18" />`
  },
  {
    title: "Integraciones Avanzadas",
    description: "Incorporamos funciones como notificaciones push, geolocalización, pagos in-app y más, mejorando la interacción y funcionalidad de tu aplicación.",
    icon: `<path stroke="#FF5F15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2a10 10 0 00-6 18m6 0a10 10 0 006-18M9 12h6m-3-3v6" />`
  }
];

const technologies = [
  "Swift", "Kotlin", "React Native", "Flutter", "Firebase", 
  "GraphQL", "SQLite", "MongoDB", "PostgreSQL", "Dart", 
  "Realm", "Jetpack Compose"
];

const steps = [
  {
    title: "Estrategia",
    description: "Analizamos tu idea, definimos los objetivos y creamos un plan estratégico detallado para el desarrollo de tu aplicación móvil."
  },
  {
    title: "Diseño UI/UX",
    description: "Creamos prototipos y diseñamos interfaces atractivas, priorizando la usabilidad y experiencia del usuario en todos los dispositivos."
  },
  {
    title: "Desarrollo",
    description: "Construimos la aplicación con código optimizado y escalable, garantizando compatibilidad, rendimiento y seguridad en todo momento."
  },
  {
    title: "Lanzamiento y Soporte",
    description: "Publicamos tu app en las tiendas, brindamos mantenimiento continuo, realizamos actualizaciones y aseguramos su estabilidad a futuro."
  }
];

---

<ServiceLayout 
  title="Desarrollo Móvil" 
  description="Aplicaciones móviles nativas y multiplataforma que transforman tu visión en experiencias móviles excepcionales."
  color="primary"
>
  <ServiceHero
    title="Desarrollo Móvil"
    description="Llevamos tu idea al siguiente nivel con aplicaciones móviles innovadoras y de alto rendimiento. Nos enfocamos en funcionalidad, diseño y tecnología avanzada para crear experiencias móviles únicas."
    image="https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?auto=format&fit=crop&q=80&w=2070"
    color="primary"
  />

  <ServiceFeatures features={features} color="primary" />
  
  <ServiceProcess steps={steps} color="primary" />

  <ServiceTechnologies technologies={technologies} color="primary" />

  <div class="text-center">
    <a 
      href="/contacto" 
      class="inline-flex items-center px-8 py-4 rounded-xl text-white bg-gradient-to-r from-primary-dark to-primary hover:from-primary hover:to-primary-dark transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105"
    >
      Desarrolla tu App Móvil
      <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
  <br><br>
</ServiceLayout>