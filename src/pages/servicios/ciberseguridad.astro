---
import ServiceLayout from '../../layouts/ServiceLayout.astro';
import ServiceHero from '../../components/ServiceHero.astro';
import ServiceFeatures from '../../components/ServiceFeatures.astro';
import ServiceTechnologies from '../../components/ServiceTechnologies.astro';
import ServiceProcess from '../../components/ServiceProcess.astro';

const features = [
  {
    title: "Centro de Operaciones de Seguridad (SOC)",
    description: "Monitoreo, detección y respuesta a amenazas en tiempo real. Operamos 24/7 con inteligencia de amenazas y automatización para una protección continua.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`
  },
  {
    title: "CSIRT - Respuesta a Incidentes",
    description: "Gestión de crisis ante ciberataques con contención, erradicación y recuperación de sistemas afectados, incluyendo análisis forense y planes de respuesta.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />`
  },
  {
    title: "Gestión de Vulnerabilidades",
    description: "Identificación y mitigación de riesgos en tu infraestructura con análisis continuo, priorización de amenazas y planes de remediación personalizados.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />`
  },
  {
    title: "Pruebas de Penetración (Pentesting)",
    description: "Simulación de ataques para evaluar la seguridad de infraestructuras, redes y aplicaciones, identificando vulnerabilidades antes de que sean explotadas.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />`
  },
  {
    title: "DevSecOps",
    description: "Integración de seguridad en el ciclo de desarrollo con análisis de código, gestión de dependencias y automatización de CI/CD.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 3v4m4-4v4m-8 4h16m-4 4h4m-8 0h4m-8 0H5m-2 0h2m0 4h16m-4 4h4m-8 0h4m-8 0H5m-2 0h2" />`
  },
  {
    title: "Consultoría en Ciberseguridad",
    description: "Asesoramiento estratégico para el diseño, implementación y mejora de la seguridad, alineado con estándares como ISO 27001 y NIST.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2L2 7l10 5 10-5-10-5zm0 10l-10-5v6a10 10 0 0020 0v-6l-10 5z" />`
  }
];

const technologies = [
  "Nmap",
  "Wireshark",
  "Metasploit",
  "Snort",
  "OpenVAS",
  "Kali Linux",
  "Burp Suite",
  "OWASP ZAP",
  "SIEM",
  "SOAR",
  "ISO 27001",
  "NIST"
];

const steps = [
  {
    title: "Evaluación",
    description: "Realizamos un análisis detallado de la infraestructura, detectamos vulnerabilidades y medimos los riesgos potenciales que podrían comprometer la seguridad de tu empresa. Esta fase es clave para conocer el estado actual y definir prioridades."
  },
  {
    title: "Planificación",
    description: "Diseñamos una estrategia de seguridad a medida, alineada con los estándares internacionales y las mejores prácticas de la industria. Definimos protocolos, políticas y soluciones específicas para mitigar riesgos y proteger tus activos digitales."
  },
  {
    title: "Implementación",
    description: "Desplegamos herramientas avanzadas, configuramos sistemas de defensa y aplicamos controles de seguridad en todas las capas de tu infraestructura digital. Nos aseguramos de que cada solución esté optimizada para ofrecer máxima protección sin afectar el rendimiento."
  },
  {
    title: "Monitoreo",
    description: "Realizamos una supervisión continua 24/7 con inteligencia de amenazas, detección proactiva y respuesta ante incidentes en tiempo real. Ajustamos las estrategias de seguridad según las nuevas amenazas emergentes para garantizar una protección constante."
  }
];

---

<ServiceLayout 
  title="Ciberseguridad" 
  description="Protege tu empresa con soluciones avanzadas de seguridad digital."
  color="accent"
>
  <ServiceHero
    title="Ciberseguridad"
    description="Fortalece la seguridad de tu negocio con nuestro portafolio integral de servicios de ciberseguridad. Protege tus datos, detecta amenazas y cumple con normativas internacionales."
    image="https://images.unsplash.com/photo-1550751827-4bd374c3f58b?auto=format&fit=crop&q=80&w=2070"
    color="accent"
  />

  <ServiceFeatures features={features} color="accent" />

  <ServiceProcess steps={steps} color="accent" />
  
  <ServiceTechnologies technologies={technologies} color="accent" />

  <div class="text-center">
    <a 
      href="/contacto" 
      class="inline-flex items-center px-8 py-4 rounded-xl text-white bg-gradient-to-r from-accent-dark to-accent hover:from-accent hover:to-accent-dark transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105"
    >
      Protege tu Negocio
      <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
  <br><br>
</ServiceLayout>
