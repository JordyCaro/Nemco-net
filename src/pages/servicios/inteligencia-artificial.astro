---
import ServiceLayout from '../../layouts/ServiceLayout.astro';
import ServiceHero from '../../components/ServiceHero.astro';
import ServiceFeatures from '../../components/ServiceFeatures.astro';
import ServiceTechnologies from '../../components/ServiceTechnologies.astro';
import ServiceProcess from '../../components/ServiceProcess.astro';

const features = [
  {
    title: "Chatbots Inteligentes",
    description: "Creamos chatbots con procesamiento de lenguaje natural que pueden responder preguntas, realizar tareas automatizadas y mejorar la interacción con los usuarios en diversos canales.",
    icon: `<path stroke="#FF5F15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3C4 4 2 8 2 12s2 8 7 9c1 0 2-1 3-1s2 1 3 1c5-1 7-5 7-9s-2-8-7-9c-1 0-2 1-3 1s-2-1-3-1z" />`
  },
  {
    title: "Análisis Predictivo",
    description: "Utilizamos algoritmos avanzados para predecir tendencias y comportamientos futuros, optimizando recursos y mejorando la toma de decisiones estratégicas.",
    icon: `<path stroke="#FF5F15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 1v6m0 0c2 0 3 2 3 3s-1 3-3 3m0 0H9m3 0v7m0 0h-3m3 0c1 0 2 1 2 2s-1 2-2 2H9c-1 0-2-1-2-2s1-2 2-2h3m3 0v1a2 2 0 0 1-2 2H9a2 2 0 0 1-2-2v-1" />`
  },
  {
    title: "Computer Vision",
    description: "Aplicamos visión computacional para el análisis de imágenes y videos, mejorando procesos de control de calidad, reconocimiento de objetos y análisis de patrones.",
    icon: `<path stroke="#FF5F15" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3C4 4 2 8 2 12s2 8 7 9c1 0 2-1 3-1s2 1 3 1c5-1 7-5 7-9s-2-8-7-9c-1 0-2 1-3 1s-2-1-3-1z" />`
  }
];

const technologies = [
  "TensorFlow", "PyTorch", "scikit-learn", "OpenAI API", 
  "Keras", "NLTK", "OpenCV", "Pandas"
];

const steps = [
  {
    title: "Análisis de Datos",
    description: "Evaluación y preparación de los datos para el entrenamiento de los modelos de IA, asegurando su calidad y relevancia."
  },
  {
    title: "Diseño de Modelo",
    description: "Selección de algoritmos y arquitectura óptimos para cada tipo de desafío, garantizando la eficacia y eficiencia en los resultados."
  },
  {
    title: "Entrenamiento",
    description: "Entrenamiento iterativo del modelo con el conjunto de datos para optimizar su precisión y capacidad de generalización."
  },
  {
    title: "Implementación",
    description: "Despliegue de los modelos en un entorno de producción con monitoreo continuo para garantizar su rendimiento y efectividad a largo plazo."
  }
];

---

<ServiceLayout 
  title="Inteligencia Artificial" 
  description="Soluciones de IA innovadoras que transforman datos en decisiones inteligentes."
  color="primary"
>
  <ServiceHero
    title="Inteligencia Artificial"
    description="Potenciamos tu negocio con soluciones de IA que mejoran la toma de decisiones, automatizan procesos y permiten predicciones más precisas."
    image="https://images.unsplash.com/photo-1677442136019-21780ecad995?auto=format&fit=crop&q=80&w=2070"
    color="primary"
  />


  <ServiceFeatures features={features} color="primary" />

  <ServiceProcess steps={steps} color="primary" />

  <ServiceTechnologies technologies={technologies} color="primary" />

  <div class="text-center">
    <a href="/contacto" class="inline-flex items-center px-8 py-4 rounded-xl text-white bg-gradient-to-r from-primary-dark to-primary hover:from-primary hover:to-primary-dark transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105">
      Potencia tu Negocio con IA
      <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
  <br><br>
</ServiceLayout>