---
import ServiceLayout from '../../layouts/ServiceLayout.astro';
import ServiceHero from '../../components/ServiceHero.astro';
import ServiceFeatures from '../../components/ServiceFeatures.astro';
import ServiceTechnologies from '../../components/ServiceTechnologies.astro';
import ServiceProcess from '../../components/ServiceProcess.astro';

const features = [
  {
    title: "Migración a la Nube",
    description: "Evaluamos y planificamos tu migración a la nube con cero tiempo de inactividad, asegurando una transición fluida y sin interrupciones en tu plataforma. Optimización post-migración para mejorar el rendimiento y la disponibilidad.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7a4 4 0 1 0 0 8h6m1-12a4 4 0 1 0 4 4h2a4 4 0 0 1 4 4" />
`
  },
  {
    title: "Arquitectura Cloud",
    description: "Diseñamos soluciones serverless y basadas en microservicios para maximizar la escalabilidad y fiabilidad. Implementamos arquitecturas que garantizan alta disponibilidad y redundancia para mantener tu plataforma operativa sin fallos.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />`
  },
  {
    title: "DevOps & Automatización",
    description: "Implementamos pipelines CI/CD y infraestructuras como código para mejorar la eficiencia operativa. Monitoreo continuo y alertas para garantizar un rendimiento óptimo de tus sistemas en todo momento.",
    icon: `<path stroke="#7C15FF" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 3v4m4-4v4m-8 4h16m-4 4h4m-8 0h4m-8 0H5m-2 0h2m0 4h16m-4 4h4m-8 0h4m-8 0H5m-2 0h2" />`
  }
];

const technologies = [
  "AWS", "Azure", "Google Cloud", "Docker", "Kubernetes", 
  "Terraform", "Jenkins", "GitLab CI"
];

const steps = [
  {
    title: "Evaluación y Planificación",
    description: "Analizamos las necesidades y objetivos de tu infraestructura para diseñar una solución cloud a medida que cumpla con tus expectativas, asegurando una migración sin complicaciones."
  },
  {
    title: "Diseño de Arquitectura",
    description: "Creamos arquitecturas escalables y seguras que permiten a tu plataforma crecer de forma eficiente. Implementamos soluciones serverless y microservicios para un rendimiento óptimo."
  },
  {
    title: "Desarrollo y Implementación",
    description: "Desarrollamos soluciones cloud basadas en las mejores prácticas de seguridad, rendimiento y disponibilidad. Nos aseguramos de que la infraestructura sea ágil y escalable."
  },
  {
    title: "Mantenimiento y Soporte",
    description: "Monitoreamos la infraestructura cloud de forma constante, implementamos mejoras continuas y ofrecemos soporte 24/7 para mantener la máxima disponibilidad y rendimiento de tus sistemas."
  }
];

---

<ServiceLayout 
  title="Soluciones Cloud" 
  description="Infraestructura en la nube escalable y segura para potenciar tu negocio digital."
  color="accent"
>
  <ServiceHero
    title="Soluciones Cloud"
    description="Moderniza tu infraestructura tecnológica con soluciones cloud de última generación. Diseñamos arquitecturas escalables que crecen con tu negocio, garantizando seguridad, rendimiento y disponibilidad."
    image="https://images.unsplash.com/photo-1451187580459-43490279c0fa?auto=format&fit=crop&q=80&w=2072"
    color="accent"
  />

  <ServiceFeatures features={features} color="accent" />
  
  <ServiceProcess steps={steps} color="accent" />

  <ServiceTechnologies technologies={technologies} color="accent" />
  
  <div class="text-center">
    <a 
      href="/contacto" 
      class="inline-flex items-center px-8 py-4 rounded-xl text-white bg-gradient-to-r from-accent-dark to-accent hover:from-accent hover:to-accent-dark transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105"
    >
      Moderniza tu Infraestructura
      <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
  <br><br>
</ServiceLayout>
