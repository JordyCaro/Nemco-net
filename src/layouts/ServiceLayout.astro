---
import Layout from './Layout.astro';

interface Props {
  title: string;
  description: string;
  color: string;
}

const { title, description, color } = Astro.props;
---

<Layout title={`${title} - DevCraft`} description={description}>
  <main class="pt-32">
    <!-- Decorative background elements -->
    <div class="fixed inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-light/5 via-accent-light/5 to-secondary-light/5 dark:from-primary-dark/10 dark:via-accent-dark/10 dark:to-secondary-dark/10"></div>
      <div class="absolute top-1/4 left-0 w-72 h-72 bg-primary-light/20 dark:bg-primary-dark/20 rounded-full filter blur-3xl"></div>
      <div class="absolute bottom-1/4 right-0 w-72 h-72 bg-secondary-light/20 dark:bg-secondary-dark/20 rounded-full filter blur-3xl"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <!-- Tech pattern overlay -->
      <div class="absolute inset-0 opacity-5 dark:opacity-10">
        <div class="absolute inset-y-0 left-0 w-1/2 bg-grid-pattern"></div>
      </div>

      <slot />
    </div>
  </main>
</Layout>

<style>
  .bg-grid-pattern {
    background-image: linear-gradient(to right, rgba(0,0,0,0.1) 1px, transparent 1px),
                      linear-gradient(to bottom, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>